<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:contextClickable="true">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/feed_name"
        android:layout_weight="1"
        android:maxLines="4"
        android:longClickable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:clickable="true" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.04" />

    <ToggleButton
        android:text=""
        android:textOff=""
        android:textOn=""
        android:id="@+id/favorite_toggle"
        android:background="@drawable/favorite_toggle_background"
        android:layout_gravity="center"
        android:layout_width="16dp"
        android:layout_height="16dp" />

    <Space
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.03" />

    <ToggleButton
        android:layout_width="52dp"
        android:layout_height="33dp"
        android:id="@+id/is_active"
        android:textSize="12sp"
        android:textOn="Đang bật"
        android:textOff="Đang tắt"
        android:textColor="@color/colorTextPrimary"
        android:background="@drawable/custom_toggle_background"
        android:layout_weight="0.01"
        android:layout_gravity="center_vertical" />
</LinearLayout>